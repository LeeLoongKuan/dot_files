!Disable Scrolbar
URxvt.scrollBar: false

! terminal colors ------------------------------------------------------------

! White on Solid Grey
*background: #2d2d2d
*foreground: #dddddd

! Set Font
URxvt.font: xft:Hack:Regular:size=11
 
!Decrease spacing between characters
URxvt.letterSpace: -1

!URL Colour blue
URxvt.colorUL: #4682B4

!Enable Clipboard
URxvt.perl-ext-common: ...,clipboard
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

!Fix w3m and ranger not being able to display images
URxvt.depth: 32

! Base16 Atelier Lakeside
! Scheme: Bram de Haan (http://atelierbram.github.io/syntax-highlighting/atelier-schemes/lakeside/)
!#include ".Xresources.d/base16-atelierlakeside.dark"

! Base16 Monokai
! Scheme: Wimer Hazenberg (http://www.monokai.nl)
!#include ".Xresources.d/base16-monokai.dark"

! Base16 Google
!#include ".Xresources.d/base16-google.dark"

! LoongKuan
#include ".Xresources.d/color_schemes/loongkuan"
